{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": ["restore", "ImGuiSharp.sln"],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "ImGuiSharp.sln", "-v", "minimal"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["restore"],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": ["test", "ImGuiSharp.sln", "--nologo"],
      "group": "test",
      "problemMatcher": ["$msCompile"]
    }
  ]
}

